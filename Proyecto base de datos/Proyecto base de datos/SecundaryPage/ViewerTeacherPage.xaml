<Page x:Class="Proyecto_base_de_datos.SecundaryPage.ViewerTeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proyecto_base_de_datos.SecundaryPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewerTeacherPage">

    <Grid Background="White">
        <ListBox x:Name="ViewerTeacherList" HorizontalAlignment="Left" Height="312" Margin="50,83,0,0" VerticalAlignment="Top" Width="644" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="ViewerTeacherList_SelectionChanged" BorderBrush="#FF0C907D" FontSize="20" MouseDoubleClick="OnMouseDoubleClick"/>
        <Button x:Name="RevisionButton" Content="Revisar" HorizontalAlignment="Left" Margin="630,374,0,0" VerticalAlignment="Top" Height="42" Width="129" FontSize="16" Click="RevisionButton_Click" Background="#FF0C907D" FontFamily="Segoe UI Semibold" Foreground="#FFF2F4B2"/>
        <Label Content="Revision de propuestas por parte de Profesor Revisor" HorizontalAlignment="Left" Height="44" Margin="74,10,0,0" VerticalAlignment="Top" Width="596" FontSize="24" FontFamily="Segoe UI Semibold" FontWeight="Normal" Foreground="#FF0C907D"/>

    </Grid>
</Page>
