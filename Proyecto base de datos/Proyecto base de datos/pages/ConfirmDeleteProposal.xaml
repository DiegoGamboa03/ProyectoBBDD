<Window x:Class="Proyecto_base_de_datos.pages.ConfirmDeleteProposal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_base_de_datos.pages"
        mc:Ignorable="d"
        Title="ConfirmDeleteProposal" Height="250" Width="300">
    <Grid>
        <TextBlock x:Name="ErrorText" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="Desea eliminar la propuesta Nro: " VerticalAlignment="Center" Height="100" Width="216" FontSize="20"><LineBreak></LineBreak><Run Name="proposal"></Run></TextBlock>
        <Button x:Name="AcceptButton" Content="Si" HorizontalAlignment="Left" Margin="60,140,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click_Yes" FontSize="18" FontFamily="Segoe UI Semibold" Background="#FF0C907D" Foreground="#FFF2F4B2"/>
        <Button x:Name="CancelButton" Content="No" HorizontalAlignment="Right" Margin="0,140,60,0" VerticalAlignment="Top" Width="60" Click="Button_Click_No" FontSize="18" FontFamily="Segoe UI Semibold" Background="#FF0C907D" Foreground="#FFF2F4B2"/>
    </Grid>
</Window>
